{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceRoot}/../../.."
    },
    {
      "name": "Launch Chrome",
       "type": "chrome",
       "request": "launch",
       "url": "http://localhost:4200/",
       "sourceMaps": true,
       "trace": true,
       "webRoot": "${workspaceRoot}"   ,
       "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]  
   }
]
}
